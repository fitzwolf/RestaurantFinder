{
	"name": "Restaurant Finder",
	"description": "A Google Chrome extension to help find restaurants that meet user searched criteria",
	"version": "1.0",
	"manifest_version": 3,
	"permissions": [
		"contextMenus",
		"notifications",
		"storage"
	],
	"background": {
	  "service_worker": "background.js"
	},
	"action": {
	  "default_popup": "popup.html",
	  "default_icon": {
		"48": "/assets/icons/Restaurant-48.png",
		"128": "/assets/icons/Restaurant-128.png"
	  }
	},
	"icons": {
		"48": "/assets/icons/Restaurant-48.png",
		"128": "/assets/icons/Restaurant-128.png"
	}
}